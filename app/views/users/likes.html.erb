<div class="main user-show">
    <div class="container">
        <div class="user">
            <img src="<%= "/user_images/#{@user.image_name}" %>">
            <h2><%= @user.name %></h2>
            <p><%= @user.email %></p>
            <p>フォロー数: <%=  @user.followings.count %></p>
            <p><%= link_to("フォロー中", "/relationships/#{@user.id}/followings") %></p>
            <p>フォロワー数:<%= @user.followers.count%></p>
            <p><%= link_to("フォロワー", "/relationships/#{@user.id}/followed") %></p>
            <% if @user.id == @current_user.id %>
            <%= link_to("編集", "/users/#{@user.id}/edit") %>
            <% end %>
            <% if  @user.id != @current_user.id  %>
            <% if @current_user.following?(@user) %>
            <%=link_to("Unfollow","/relationships/#{@user.id}/destroy",{method:"post"})%>

            <%else%>
            <%=link_to("Follow","/relationships/#{@user.id}/create",{method:"post"})%>
            <%end%>
            <%end%>
        </div>

        <ul class="user-tabs">
            <li><%= link_to("投稿", "/users/#{@user.id}") %></li>
            <li class="active"><%= link_to("いいね!", "/users/#{@user.id}/likes") %></li>

        </ul>
        <%@likes.each do |like| %>

        <%post=Post.find_by(id: like.post_id) %>

        <div class="posts-index-item">
            <div class="post-left">
                <img src="<%= "/user_images/#{post.user.image_name}" %>">
            </div>
            <div class="post-right">
                <div class="post-user-name">
                    <%= link_to(post.user.name, "/users/#{post.user.id}") %>
                </div>
                <%= link_to(post.content, "/posts/#{post.id}") %>
            </div>
        </div>

        <%end%>
    </div>
</div>