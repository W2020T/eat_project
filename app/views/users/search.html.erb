<div class="main user-show">
    <h1>検索する</h1>
    <%= form_with url: search_users_path, method: :get, local: true do |f| %>
    <%= f.text_field :name %>
    <%= f.submit :検索 %>
    <% end %>
    <h1>ユーザー名</h1>
    <% @users.each do |user| %>
    <div class="card">
        <div class="user-left">
            <img src="<%= "/user_images/#{user.image_name}" %>">
        </div>
        <div class="user-right">
            <%= link_to(user.name, "/users/#{user.id}") %>
        </div>
    </div>
    <% end %>

</div>