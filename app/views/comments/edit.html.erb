<div class="main posts-new">
    <div class="container">
        <h1 class="form-heading">編集する</h1>
        <%= form_tag("/comments/#{@comment.id}/update", {multipart: true}) do %>
        <div class="form">
            <div class="form-body">

                <textarea name="content"><%= @comment.content %></textarea>
                <input type="submit" value="保存">
            </div>
        </div>
        <% end %>
    </div>
</div>