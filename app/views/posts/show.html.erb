<div class="main posts-show">
    <div class="container">
        <div class="posts-show-item">
            <div class="post-user-name">
                <img src="<%= "/user_images/#{@user.image_name}" %>">
                <%= link_to(@user.name, "/users/#{@user.id}") %>
            </div>
            <p>
                <%= @post.content %>
            </p>

            <div class="post-time">
                <%= @post.created_at %>
                <% if Like.find_by(user_id:@current_user.id,post_id:@post.id)%>

                <%=link_to("/likes/#{@post.id}/destroy",{method:"post"}, remote: true )do%>
                <span class="fa fa-heart like-btn-unlike"></span>

                <% end %>
                <%else%>

                <%=link_to("/likes/#{@post.id}/create",{method:"post"}, remote: true )do%>
                <span class="fa fa-heart like-btn"></span>

                <%end%>
                <%end%>
                <%=@likes_count%>

            </div>

            <% if @post.user_id == @current_user.id %>
            <div class="post-menus">
                <%= link_to("編集", "/posts/#{@post.id}/edit") %>
                <%= link_to("削除", "/posts/#{@post.id}/destroy", {method: "post"}) %>
            </div>
            <% end %>
            <div class="comments ml-5 mt-5">
                <%= form_tag("/comments/create") do %>
                <textarea name="content"><%= @comment.content %></textarea>
                <input type="submit" value="コメントする">
                <% end %>

                <p>コメント件数：<%= @comments.count %></p>
                <% @comments.each do |comment| %>
                <div class="comments-index mb-2">
                    <%= comment.user.name %>
                    <%= comment.created_at.strftime('%Y/%m/%d') %><br>
                    <div class="d-flex">
                        <%= comment.content %>
                        <% if comment.user == @current_user %>
                        <div class="comment-delete">
                            <%= link_to("削除", "/comments/#{comment.id}/destroy", {method: "post"}) %>
                        </div>
                    </div>
                </div>
                <% end %>
                <% end %>
                <%= paginate @comments %>
            </div>
        </div>

    </div>







</div>
</div>

</div>