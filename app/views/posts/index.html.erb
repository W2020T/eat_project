<div class="main posts-index">
    <div class="container">


        <h3> タグリスト</h3>

        <%  @tag_list.each do |list|%>

        <%= link_to(list.tag_name, tag_posts_path(tag_id: list.id))%>
        <%="#{list.posts.count}"%>投稿


        <% end %>

        <% @posts.each do |post| %>
        <div class="card">

            <img src="<%= "/user_images/#{post.user.image_name}" %>" class="rounded-circle">
            </h5>
            <div class="post-right">
                <div class="card-body">
                    <%= link_to(post.user.name, "/users/#{post.user.id}") %>
                </div>
                <%= link_to(post.content, "/posts/#{post.id}") %>
                <p class="caption"><%= "#{post.comments.count} コメント" %></p>
            </div>

        </div>

        <% end %>
        <%= paginate @posts %>
    </div>
</div>